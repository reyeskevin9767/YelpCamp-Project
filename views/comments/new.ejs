<% include ../partials/header %>

<div class="row justify-content-center">

  <div class="col-md-12 col-sm-12 text-center">
    <form class="form-signin" action="/campgrounds/<%= campground._id %>/comments" method="POST">

      <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Add New Comment To <%= campground.name %></h1>
          <h1 id="require" class="h6 mb-3 font-weight-light">* Required</h1>
        </div>

      </div>

      <div class="col-sm-12 col-md-8 col-lg-6">

        
    <div class="form-group">
      <label for="inputComment" class="sr-only">Username</label>
      <input type="text" id="inputComment" class="form-control" name="comment[text]" 
     title="Create A New Comment" placeholder="New Comment*" required autofocus>
    </div>

        <div class="form-group">
          <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
        </div>
      </form>

      <div class="form-group">
        <a href="/campgrounds">Go Back</a>
      </div>

    </div> 
  </div>



<% include ../partials/footer %>